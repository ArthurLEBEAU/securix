<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/static/assets/images/logo.png" type="image/x-icon">
    <meta name="description" content="site de securex sarl">
    <link rel="stylesheet" href="/static/assets/css/admin_css.css">
    {% block css %}{% endblock %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
    <title>SECUREX-ADMIN | {{ title }}</title>
</head>

<body>
    <!-- preloaded start -->
    <div class="preloaded">
        <span></span>
    </div>
    <!-- preloaded end -->
    <section class="page_wrapper">
        <div class="side_bar">
            <div class="logo">
                <img src="/static/assets/images/logo.png" alt="">

                <i class="fa-solid fa-plus"></i>
            </div>
            <div class="side_bar_content">
                <ul>
                    <li>
                        <a href="/admin" class="{{'active' if pageKey == 'home' else ''}}">
                            <i class="fa-solid fa-home"></i>
                            <span>Accueil</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/categorie" class="{{'active' if pageKey == 'categorie' else ''}}">
                            <i class="fa-solid fa-folder-open"></i>
                            <span>Gerer les categories</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/articles" class="{{'active' if pageKey == 'article' else ''}}">
                            <i class="fa-solid fa-file"></i>
                            <span>Gerer les articles</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/service" class="{{'active' if pageKey == 'service' else ''}}">
                            <i class="fa-solid fa-hand-holding-hand"></i>
                            <span>Gerer les services</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/faq" class="{{'active' if pageKey == 'faq' else ''}}">
                            <i class="fa-solid fa-clipboard-question"></i>
                            <span>Gerer les FAQ</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/contact" class="{{'active' if pageKey == 'contact' else ''}}">
                            <i class="fa-solid fa-mail-bulk"></i>
                            <span>Gerer les messages</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/account" class="{{'active' if pageKey == 'account' else ''}}">
                            <i class="fa-solid fa-user-cog"></i>
                            <span>Mon compte</span>
                        </a>
                    </li>
                </ul>
            </div>

            <a href="" class="leave"></a>
        </div>
        <div class="page_content">
            <!-- header start -->
            <header>
                <div class="greting_block">
                    <h5>Bonjour, <span>{{ username }}</span></h5>
                    <p>{{ date }}</p>
                    <img class="logo_head" src="/static/assets/images/logo.png" alt="">
                </div>
                <div class="profil_block">
                    <div class="profil">
                        <img src="/static/assets/images/logout_2.png" alt="">
                    </div>
                </div>
                <div class="menu-togle">
                    <i class="fa-solid fa-bars"></i>
                </div>
            </header>
            <!-- header end -->

            <!-- content body start -->
            <div class="content_body" id="{{pageKey}}">
                {% block content %}{% endblock %}
            </div>
            <!-- content body end -->            
        </div>
    </section>
    </div>

    {% block pop_up %}{% endblock %}


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/static/assets/js/admin_global_js.js" type="module"></script>
    {% block js %}{% endblock %}
</body>

</html>