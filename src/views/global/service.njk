{% set title = 'SERVICES' %}
{% set pageKey = 'service' %}
{% set pathUrl = "services?active_category="+active_category %}
{% import "../components/pagination.njk" as PaginationComponent %}
{% block content %}

        <!-- section hero start -->
        <section class="hero d-flex jc-c ai-c">
            <img src="/static/assets/images/hero_bg.jpg" alt="background de la section hero" id="hero_bg">
            <div class="wrapper">
                <h1>Nos services</h1>
            </div>
        </section>
        <!-- section hero end -->
        <!-- section services start -->
        <section class="services d-flex jc-c ai-c">
            <div class="wrapper">
                <div class="services_wrapper_desc">
                    <div class="section_title">
                        <h2 class="title_text">Les services securix</h2>
                    </div>
                    <div class="services_content_text">
                        <p>SECURIX ASSURANCES a de grandes ambitions pour sa clientèle à travers son engagement à offrir des services de qualité irréprochable dans la recherche des couvertures d’assurance et de réassurance en adéquation avec les besoins pertinents des clients.
Découvrez tous nos services.</p>
                    </div>
                </div>
                <div class="services_categories">
                    <ul class="d-flex jc-c ai-c">
                        <li><a class="{{'active' if active_category == 'all' else ''}}" href="/services" >Tout</a></li>
                        {% for categorie in categories %}
                        <li><a class="{{'active' if categorie.name == active_category  else ''}}" href="/services?active_category={{categorie.name}}" >{{ categorie.name }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="services_content" id="services_list">
                    {% if services.length > 0 %}
                        {% for service in services %}
                            {% if (loop.index % 2) == 0 %}
                                <div class="services_content_card">
                                    <img src="/static{{ service.cover }}" alt="image decrivant le service de l'entreprise">
                                    <div class="service_card_content">
                                        <small>{{ service.cat_id.name }}</small>
                                        <h1 class="service_card_content_title">{{ service.title }}</h1>
                                        <p>{{ service.description }}</p>
                                    </div>
                                </div>
                            {% else %}
                                <div class="services_content_card wrap-reverse">
                                    <div class="service_card_content">
                                        <small>{{ service.cat_id.name }}</small>
                                        <h1 class="service_card_content_title">{{ service.title }}</h1>
                                        <p>{{ service.description }}</p>
                                    </div>
                                    <img src="/static{{ service.cover }}" alt="image decrivant le service de l'entreprise">
                                </div>
                            {% endif %}
                        {% endfor %}
                        {{ PaginationComponent.Pagination(pathUrl,numberOfLinks,numberOfLinks,pages, "services_list") }}
                    {% else %}
                        <p style="text-align:center;">Aucun service !</p>
                    {% endif %}

                </div>

                <div class="services_footer d-flex jc-c ai-c">
                    <div class="wrapper">
                        <svg xmlns="http://www.w3.org/2000/svg" width="96.875" height="96.875" viewBox="0 0 96.875 96.875">
